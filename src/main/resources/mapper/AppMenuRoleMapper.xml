<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.admin.server.dao.AppMenuRoleMapper">
    <delete id="deleteMenuByRid" parameterType="java.lang.Integer">
        DELETE FROM app_menu_role WHERE role_id=#{roleId}
    </delete>
    <insert id="addMenu">
        INSERT INTO app_menu_role(menu_id,role_id) VALUES
        <foreach collection="menuIds" item="menuId" separator=",">
            (#{menuId},#{roleId})
        </foreach>
    </insert>
</mapper>